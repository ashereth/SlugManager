<%- include("./partials/header.ejs") %>
    <h2 class="work-sans-bold">SlugManager Login</h2>
    <p class="work-sans-regular">Please fill the form below:</p>
    <div class="form-container">
        
        <!-- login form -->
        <form id="loginForm" action="/login" method="POST">
            <label class="work-sans-regular" for="username">Username:</label>
            <input type="username" id="username" name="username" required>
            <br>
            <label class="work-sans-regular" for="password">Password:</label>
            <input type="password" id="password" name="password" required>
            <br>
            <button type="submit">Login</button>
        </form>
        
    </div>
</body>
